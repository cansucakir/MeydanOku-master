<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.androidproje.MainActivity"
    android:focusableInTouchMode="false"
    android:background="#9a3870">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"

        android:src="@drawable/image7"
        android:id="@+id/imageView"
        android:background="#00ffffff"
        android:layout_below="@+id/yenioyunbtn"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/image8"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YENI OYUN"
        android:id="@+id/yenioyunbtn"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#FF9800"
        android:textSize="20dp"

        android:onClick="Tiklandi2"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKORLAR"
        android:id="@+id/skorbtn"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#a3a3a3"
        android:textSize="20dp"

        android:onClick="Tiklandi3"

        android:layout_above="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />


</RelativeLayout>
